### define the Power Control GUI
class Power
  include MSG

  def initialize
    @glade = GladeXML.new("#{$path}/glade/f5wfs_power.glade") {|handler| method(handler)}
    @powermain = @glade.get_widget("MainWindow")

    @switches = {
      'Servo' => 'spower',
      'Encoder' => 'epower',
      'Puntino' => 'ppower',
      'SBIG' => 'bpower',
#      'Apogee' => 'apower',
      'StellaCam' => 'fpower'
    }

    @socket = sockopen($wavehost, $waveport)
    @pulz7_socket = sockopen($pulzhost, $pulzport)

    @power_thread = Thread.new {
      loop {

	### get power status for switches run by WFS computer
	if @socket
	  @switches.each { |key, par|
	    flag = msg_get(@socket, par)
	    if flag =~ /Error/
	      @glade.get_widget("#{key}").child.set_text("#{key} Power ERROR")
	    else
	      flag = flag.to_i
	      if (flag == 1)
		@glade.get_widget("#{key}").child.set_text("#{key} Power is ON")
	      else
		@glade.get_widget("#{key}").child.set_text("#{key} Power is OFF")
	      end
	    end
	  }
	else
	  @switches.each { |key, par|
	    @glade.get_widget("#{key}").child.set_text("#{key} Power UNKNOWN")
	  }
	  @socket = sockopen($wavehost, $waveport)
	end

	### get power status for switches run by pulizzis
	### first the WFS computer power
	if @pulz7_socket
	  flag = msg_get(@pulz7_socket, 'wfs_control')
	  if (flag =~ /Error/)
	    @glade.get_widget("WFSpower").child.set_text("WFS Computer Power ERROR")
	  else
	    if (flag =~ /on/)
	      @glade.get_widget("WFSpower").child.set_text("WFS Computer Power is ON")
	    else
	      @glade.get_widget("WFSpower").child.set_text("WFS Computer Power is OFF")
	    end
	  end
	else
	  @glade.get_widget("WFSpower").child.set_text("WFS Computer Power UNKNOWN")
	  @pulz7_socket = sockopen($pulzhost, $pulzport)
	end

	### then WFS drive power
	if @pulz7_socket
	  flag = msg_get(@pulz7_socket, 'wfs_drive')
	  if (flag =~ /Error/)
	    @glade.get_widget("WFSDrivepower").child.set_text("WFS Drive Power ERROR")
	  else
	    if (flag =~ /on/)
	      @glade.get_widget("WFSDrivepower").child.set_text("WFS Drive Power is ON")
	    else
	      @glade.get_widget("WFSDrivepower").child.set_text("WFS Drive Power is OFF")
	    end
	  end
	else
	  @glade.get_widget("WFSDrivepower").child.set_text("WFS Drive Power UNKNOWN")
	  @pulz7_socket = sockopen($pulzhost, $pulzport)
	end
	sleep(2)
      }
    }

    @glade.get_widget("Apogee").set_sensitive(false)
    @glade.get_widget("Apogee").child.set_text("Apogee Camera Disabled")
  end

  def on_MainWindow_destroy
    @power_thread.kill
    @power_thread = nil

    if @socket
      @socket.close
      @socket = nil
    end
    if @pulz7_socket
      @pulz7_socket.close
      @pulz7_socket = nil
    end
    @powermain.destroy
  end

  def on_WFSDrivepower_clicked
    flag = msg_get(@pulz7_socket, 'wfs_drive')
    if (flag =~ /Error/)
      @glade.get_widget("WFSDrivepower").child.set_text("WFS Drive Power ERROR")
    else
      if (flag =~ /on/)
	cmd = msg_cmd(@pulz7_socket, 'wfs_drive', 'off')
	if cmd
	  @glade.get_widget("WFSDrivepower").child.set_text("WFS Drive Power is OFF")
	else
	  @glade.get_widget("WFSDrivepower").child.set_text("WFS Drive Power ERROR")
	end
      elsif (flag =~ /off/)
	cmd = msg_cmd(@pulz7_socket, 'wfs_drive', 'on')
	if cmd
	  @glade.get_widget("WFSDrivepower").child.set_text("WFS Drive Power is ON")
	else 
	  @glade.get_widget("WFSDrivepower").child.set_text("WFS Drive Power ERROR")
	end
      end
    end
  end
  
  def on_WFSpower_clicked
    flag = msg_get(@pulz7_socket, 'wfs_control')
    if (flag =~ /Error/)
      @glade.get_widget("WFSpower").child.set_text("WFS Computer Power ERROR")
    else
      if (flag =~ /on/)
	cmd = msg_cmd(@pulz7_socket, 'wfs_control', 'off')
	if cmd
	  @glade.get_widget("WFSpower").child.set_text("WFS Computer Power is OFF")
	else
	  @glade.get_widget("WFSpower").child.set_text("WFS Computer Power ERROR")
	end
      elsif (flag =~ /off/)
	cmd = msg_cmd(@pulz7_socket, 'wfs_control', 'on')
	if cmd
	  @glade.get_widget("WFSpower").child.set_text("WFS Computer Power is ON")
	else
	  @glade.get_widget("WFSpower").child.set_text("WFS Computer Power ERROR")
	end
      end
    end
  end

  def power_clicked(command, label)
    flag = msg_get(@socket, command).to_i
    if (flag =~ /Error/)
      @glade.get_widget(label).child.set_text("#{label} Power ERROR")
    else
      if (flag == 1)
	msg_cmd(@socket, command, '0')
	@glade.get_widget(label).child.set_text("#{label} Power is OFF")
      else
	msg_cmd(@socket, command, '1')
	@glade.get_widget(label).child.set_text("#{label} Power is ON")
      end
    end
  end

  def on_Servo_clicked
    power_clicked('spower', 'Servo')
  end

  def on_Encoder_clicked
    power_clicked('epower', 'Encoder')
  end

  def on_Puntino_clicked
    power_clicked('ppower', 'Puntino')
  end

  def on_SBIG_clicked
    power_clicked('bpower', 'SBIG')
  end

  def on_Apogee_clicked
    power_clicked('apower', 'Apogee')
  end

  def on_Filter_clicked
  end

  def on_StellaCam_clicked
    power_clicked('fpower', 'StellaCam')
  end
end

### define the configuration GUI
class ConfigGUI
  include MSG

  def initialize(inst)
    @inst = inst
    @glade = GladeXML.new("#{$path}/glade/f5wfs_config.glade") {|handler| method(handler)}
    @configmain = @glade.get_widget("MainWindow")
    @status = @glade.get_widget("StatusBar")
    @glade.get_widget("DefaultConfig").child.set_text("Set to Default #{@inst} Configuration")

    # map names i use with the MSG commands
    @params = {
      'toffset' => 'toffset',
      'foffset' => 'foffset',
      'tinsoff' => 'toffxxx',
      'finsoff' => 'foffxxx',
      'wfscpos' => 'p70',
      'scicpos' => 'p71',
      'wfstins' => 'p72',
      'scitins' => 'p73',
      'wfsfins' => 'p74',
      'scifins' => 'p75'
    }

    # map names i use with the MSG commands
    @cmds = {
      'toffset' => 'toffset',
      'foffset' => 'foffset',
      'tinsoff' => 'toffxxx',
      'finsoff' => 'foffxxx',
      'wfscpos' => 'p70',
      'scicpos' => 'p71',
      'wfstins' => 'p72',
      'scitins' => 'p73',
      'wfsfins' => 'p74',
      'scifins' => 'p75'
    }
    
    # map names to their default positions
    @default = {
      'toffset' => 0.0,
      'foffset' => 0.0,
      'tinsoff' => 0.0,
      'finsoff' => 0.0,
      'wfscpos' => $wfscpos,
      'scicpos' => $scicpos,
      'wfstins' => $wfstins,
      'scitins' => $scitins,
      'wfsfins' => $wfsfins[@inst],
      'scifins' => $scifins
    }

    # set the current to the default
    @current = Hash.new

    # query to see where we're at
    on_QueryConfig_clicked
  end

  # routine to print to statusbar
  def report(text)
    @status.pop(0)
    @status.push(0, text)
  end

  def move_disable
    @glade.get_widget("Home").set_sensitive(false)
    @glade.get_widget("DefaultConfig").set_sensitive(false)
    @glade.get_widget("SetConfig").set_sensitive(false)
    @glade.get_widget("QueryConfig").set_sensitive(false)
  end

  def move_enable
    @glade.get_widget("Home").set_sensitive(true)
    @glade.get_widget("DefaultConfig").set_sensitive(true)
    @glade.get_widget("SetConfig").set_sensitive(true)
    @glade.get_widget("QueryConfig").set_sensitive(true)
  end

  def on_MainWindow_destroy
    @configmain.destroy
  end

  # do the query
  def on_QueryConfig_clicked
    report("Querying WFS Configuration...")
    t = Thread.new {
      move_disable
      begin
	timeout(30) {
	  socket = sockopen($wavehost, $waveport)
	  if socket
	    @params.each { |key, param|
	      value = msg_get(socket, param)
	      if value =~ /Error/
		report("Error Querying WFS: #{value}")
	      else
		@glade.get_widget("#{key}_Spinner").set_value(value.to_f)
		@current[key] = value
	      end
	    }
	    socket.close
	    socket = nil
	    report("Ready.")
	  else
	    raise "no connection"
	  end
	}
      rescue Timeout::Error
	report("Query Timed Out.")
      rescue => why
	report("Error Querying WFS: #{why}")
      end
      move_enable
    }
  end

  # set WFS stages to values given in gui
  def on_SetConfig_clicked
    report("Setting WFS Configuration...")
    t = Thread.new {
      move_disable
      begin
	timeout(60) {
	  socket = sockopen($wavehost, $waveport)
	  if socket
	    cmd = msg_cmd(socket, "fmove", @glade.get_widget("wfsfins_Spinner").value)
	    if !cmd || cmd =~ /Error/
	      raise "fmove command failed."
	    end
	    @cmds.each { |key, param|
	      value = @glade.get_widget("#{key}_Spinner").value
	      if (value != @current[key])
		cmd = msg_set(socket, param, value)
		if !cmd || cmd =~ /Error/
		  raise "setting #{param} failed."
		end
	      end
	    }
	    socket.close
	    socket = nil
	    report("Ready.")
	  else
	    raise "no connection"
	  end
	}
      rescue Timeout::Error
	report("Timed out Configuring WFS.")
      rescue => why
	report("Error Configuring WFS: #{why}")
      end
      move_enable
    }
  end

  # set WFS stages to their MegaCam defaults
  def on_DefaultConfig_clicked
    report("Setting WFS Configuration to #{@inst} Defaults...")
    t = Thread.new {
      move_disable
      begin
	timeout(60) {
	  socket = sockopen($wavehost, $waveport)
	  if socket
	    @cmds.each { |key, param|
	      if (@default[key] != @current[key])
		if (param =~ /move/)
		  cmd = msg_cmd(socket, param, @default[key])
		  if !cmd || cmd =~ /Error/
		    raise "#{param} command failed."
		  end
		else
		  cmd = msg_set(socket, param, @default[key])
		  if !cmd || cmd =~ /Error/
		    raise "setting #{param} failed."
		  end
		end
	      end
	    }
	    cmd = msg_cmd(socket, "fmove", @default['wfsfins'])
	    if !cmd || cmd =~ /Error/
	      raise "fmove command failed."
	    end
	    socket.close
	    socket = nil
	    report("Ready.")
	  else 
	    raise "no connection"
	  end
	}
      rescue Timeout::Error
	report("Timed out Configuring WFS.")
      rescue => why
	report("Error Configuring WFS: #{why}")
      end
      move_enable
      # run this to update the gui
      on_QueryConfig_clicked
    }
  end

  # home the WFS system
  def on_Home_clicked
    report("Homing WFS....")
    t = Thread.new {
      move_disable
      begin
	timeout(300) {
	  socket = sockopen($wavehost, $waveport)
	  if socket
	    cmd = msg_cmd(socket, "spower", 1)
	    if !cmd || cmd =~ /Error/
	      raise "spower on command failed."
	    end
	    cmd = msg_cmd(socket, "home", nil)
	    busy = 1
	    loop {
	      busy = msg_get(socket, "busy")
	      break if busy.to_i == 0
	      sleep 1
	    }
	    cmd = msg_cmd(socket, "spower", 0)
	    if !cmd || cmd =~ /Error/
	      raise "spower off command failed."
	    end
	    socket.close
	    socket = nil
	    report("WFS Homed.")
	  else
	    raise "no connection"
	  end
	}
      rescue Timeout::Error
	report("Timed Out Homing WFS.")
      rescue => why
	report("Error Homing WFS: #{why}")
      end
      move_enable
    }
  end

end

