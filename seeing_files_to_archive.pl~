#!/usr/bin/perl -w

use File::Find;
use PDL;

find \&wanted, "/mmt/wfsdat"

sub wanted {
   
    my $found = $_;
    return unless -f $found;
    return if $file =~ /Ref/;
    return if $found =~ /ref/;
    return if $found =~ /pix/;
    return if $found =~ /sci/;
    return if $found =~ /_ave\./;
    return if $found =~ /back\.fits/;
    return if $found =~ /tmp\.fits/;
    
    if ($found =~ /\.fits/) {
     print "Working on $fits...\n";
    my $dir = $File::Find::dir;

    my $fits = $found;

    my $file =~ s/\.fits//;
    my $sf = $file . ".sf";
    my $as = $file . ".allstar";
    my $seeing = $file . ".seeing";
    my $cntr = $file . ".center";
    my $dao = $file . ".dao";
    my $psf_f = $file . ".psf";

    my $data = rfits $fits;

    $date = $data->fhdr->{'DATE'};
    if (!$date) {
        $date = $data->fhdr->{'DATE-OBS'};
        if (!$date) {
           $date = "0000-00-00";
        }
    }

$time = $data->fhdr->{'UT'};
if (!$time) {
  $time = $data->fhdr->{'TIME-OBS'};
  if (!$time) {
    $time = "00:00:00.0";
  }
}

    }

 
  }





